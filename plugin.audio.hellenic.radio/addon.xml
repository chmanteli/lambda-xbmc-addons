		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.parsedom" version="0.9.1"/>
		<import addon="plugin.video.youtube" version="2.9.2"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>audio</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Radio stations from Greece.</summary>
		<summary lang="el">Ραδιοφωνικοί σταθμοί από την Ελλάδα.</summary>
